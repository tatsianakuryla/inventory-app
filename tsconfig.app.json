{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "index.html",
    "src/shared/types/facebook.d.ts",
    "src/shared/types/google.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
